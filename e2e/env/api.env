NODE_ENV=production
PORT=3030

# API base URL the frontend expects when served by the API container
BASE_URL=http://localhost:3030
SERVER_URL=http://localhost:3030

# Prisma connects to Postgres via compose service name
# DATABASE_URL is overridden in docker-compose; keep a sane default here too
DATABASE_URL=postgresql://postgres:postgres@db:5432/sluop

# Minimal secrets for local/dev e2e
JWT_SECRET=dev-e2e-secret

# Disable or dummy out 3rd-party integrations during e2e
SENTRY_AUTH_TOKEN=
SENTRY_DSN=
HONEYCOMB_API_KEY=
OTEL_SERVICE_NAME=CoreDesk
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_LOG_LEVEL=info

# Dummy AWS/Spaces creds to satisfy config paths that read them
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_BUCKET=
AWS_ENDPOINT=
PROJECT_NAME=e2e

